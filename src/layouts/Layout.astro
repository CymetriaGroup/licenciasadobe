---
interface Props {
  title?: string;
  theme?: string;
}

const { title = "Licencias Adobe | Distribuidor Platino", theme = "light" } =
  Astro.props;
---

<!doctype html>
<html lang="es" data-theme={theme}>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/Logo.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://use.typekit.net/lcr1hmh.css" />
    <title>{title}</title>
    <meta
      name="description"
      content="Somos distribuidor platino #1 para Colombia. Compra tus licencias Adobe al mejor precio y con el mejor valor agregado."
    />

    <meta
      name="keywords"
      content="licencias adobe, licenciamiento adobe, distribuidor adobe colombia, licencias adobe colombia, adobe, distribuidor platino, adobe licensias"
    />

    <meta property="og:type" content="website" />

    <!-- robots.txt-->
    <meta name="robots" content="index, follow" />

    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- open graph -->
    <meta property="og:title" content="Licencias Adobe" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://licenciasadobe.com/" />
    <meta property="og:image" content="/Logo.png" />
    <meta
      property="og:description"
      content="Somos distribuidor platino #1 para Colombia. Compra tus licencias Adobe al mejor precio y con el mejor valor agregado."
    />
    <meta property="og:site_name" content="Licencias Adobe" />

    <!-- Twitter card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@cymetria" />
    <meta name="twitter:title" content="Licencias Adobe" />
    <meta
      name="twitter:description"
      content="Somos distribuidor platino #1 para Colombia. Compra tus licencias Adobe al mejor precio y con el mejor valor agregado."
    />
    <meta name="twitter:image" content="/Logo.png" />

    <!-- etiqueta canonica -->
    <link rel="canonical" href="https://licenciasadobe.com/" />
    <!-- etiqueta hreflang -->
    <link rel="alternate" href="https://licenciasadobe.com/" hreflang="es-co" />
  </head>
  <body>
    <slot />
  </body>
</html>
<style>
  body {
    font-family: "myriad-pro", sans-serif;
  }
</style>
