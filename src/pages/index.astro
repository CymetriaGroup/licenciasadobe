---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Swiper from "../components/Swiper/Swiper.astro";
---

<Layout>
  <main>
    <Navbar />
    <section class="section1">
      <div class="text-hero">
        <h1>
          Somos m√°s que un distribuidor platino de adobe, somos tu familia
          creativa..
        </h1>
      </div>
      <div class="spaceAnimation"></div>
      <!-- <div class="animationHero">
        <img src="/public/videoPreview.png" alt="hero" />
      </div> -->
      <div class="animationHero">
        <video src="./public/videos/banner3.mp4" autoplay loop></video>
      </div>
    </section>
    <section class="section2">
      <h2>Productos destacados</h2>
      <div class="swiperContainer">
        <Swiper />
      </div>
    </section>
  </main>
</Layout>
<style>
  .section1 {
    position: relative;
    height: 100vh;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 140px;
  }
  .text-hero {
    width: 50%;
    font-weight: bold;
    font-style: italic;
    font-size: 50px;
    z-index: 1;
  }
  .animationHero {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: center;
  }
  .animationHero video {
    width: 100%;
    height: auto;
  }
  .section2 {
    background-color: #f5f5f5;
    height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40px 60px;
  }
  .section2 h2 {
    font-size: 44px;
    font-weight: bold;
    padding-bottom: 40px;
  }
  .swiperContainer {
    width: 100%;
    height: 450px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
